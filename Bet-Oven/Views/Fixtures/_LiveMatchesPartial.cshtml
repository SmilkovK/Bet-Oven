@model List<SportDomain.models.Fixture>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var match in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-lg p-3 bg-white rounded">
                    <div class="card-body text-center">
                        <h5 class="card-title text-primary">@match.Date</h5>
                        <div class="d-flex justify-content-around align-items-center">
                            <div>
                                <img src="https://placehold.co/50x50" class="rounded-circle" alt="Home Team">
                                <h5 class="mt-2 text-dark">@match.Teams.Home.Name</h5>
                            </div>
                            <div>
                                <span class="badge bg-success fs-5">@match.Goals?.Home</span>
                                <span class="fs-4"> - </span>
                                <span class="badge bg-danger fs-5">@match.Goals?.Away</span>
                            </div>
                            <div>
                                <img src="https://placehold.co/50x50" class="rounded-circle" alt="Away Team">
                                <h5 class="mt-2 text-dark">@match.Teams.Away.Name</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">No live matches available.</p>
}
