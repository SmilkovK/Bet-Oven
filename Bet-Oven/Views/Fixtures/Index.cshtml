@model List<SportDomain.models.Fixture>

@{
    ViewData["Title"] = "Live Matches";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-4">
    <h2 class="text-center mb-4">⚽ Live Football Matches</h2>

    <div id="matches-container">
        @await Html.PartialAsync("_LiveMatchesPartial", Model)
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    function refreshMatches() {
        $.get("/Fixtures/LiveMatchesPartial", function (data) {
            $("#matches-container").html(data);
        });
    }

    setInterval(refreshMatches, 10000);
</script>
