@model List<SportDomain.models.Fixture>

@{
    ViewData["Title"] = "Live Football Matches";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/liveMatchesCss.css" />
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;600;700&display=swap" rel="stylesheet">

<div class="container mt-4">
    <h2 class="text-center mb-4">⚽ Live Football Matches</h2>
    <div id="matches-container">
        @await Html.PartialAsync("_LiveMatchesPartial", Model)
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function refreshMatches() {
        $.get("/Fixtures/LiveMatchesPartial", function (data) {
            $("#matches-container").html(data);
        });
    }
    setInterval(refreshMatches, 10000);
</script>
